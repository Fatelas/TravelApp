<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="4dp"
    tools:layout_editor_absoluteY="0dp">

    <EditText
        android:id="@+id/idDest"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Destination"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/idDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idFirstName"
        app:layout_constraintTop_toBottomOf="@+id/idFirstName"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/enddate"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="End"
        android:minHeight="48dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/idDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="@+id/idFirstName"
        app:layout_constraintTop_toBottomOf="@+id/idFirstName"
        app:layout_constraintVertical_bias="0.768" />

    <EditText
        android:id="@+id/startDate"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Start"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/idDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idFirstName"
        app:layout_constraintTop_toBottomOf="@+id/idFirstName"
        app:layout_constraintVertical_bias="0.768" />

    <EditText
        android:id="@+id/idFirstName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="first name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idLastName"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="last name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="@+id/idFirstName"
        app:layout_constraintTop_toBottomOf="@+id/idFirstName" />

    <ListView
        android:id="@+id/id_listviewtrip"
        android:layout_width="wrap_content"
        android:layout_height="500px"
        android:layout_marginTop="24dp"
        android:alpha="0.7"
        android:background="#E5EAD7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idDelete" />

    <Button
        android:id="@+id/idUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="152dp"
        android:text="Update"
        app:layout_constraintStart_toEndOf="@+id/idDelete"
        app:layout_constraintTop_toBottomOf="@+id/idLastName" />

    <Button
        android:id="@+id/idDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="4dp"
        android:text="Cancel trip"
        app:layout_constraintEnd_toEndOf="@+id/idLastName"
        app:layout_constraintTop_toBottomOf="@+id/idLastName" />


</androidx.constraintlayout.widget.ConstraintLayout>